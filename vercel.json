{
    "version": 2,
    "buildCommand": "rm -rf .next && vc build && vc deploy --prebuilt",

    "functions": {
      "app/api.*": {
        "maxDuration": 100,
      },
      "api/**/*": {
        "maxDuration": 100,
      },
      "api/*": {
        "maxDuration": 100,
      }
    },
    "routes": [
        {
          "src": "/(.*)",
          "dest": "app/api.py",
          "headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,OPTIONS",
            "Access-Control-Allow-Headers": "Content-Type, Authorization"
          }
        }
      ],
      "env": {
        "APP_MODULE": "app:api"
      }

  }